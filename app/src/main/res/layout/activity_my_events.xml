<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ofir.testfunctionality2.MyEventsActivity"
    android:background="#306a9f">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/title" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout3" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:id="@+id/main">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="238dp"
                android:id="@+id/Modreator"
                android:layout_column="10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modreator"
                    android:id="@+id/tvModreator"
                    android:textSize="30dp"
                    android:textColor="#ffffff" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="132dp"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_below="@+id/linearLayout"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/linearLayout2" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/modreatorList"
                    android:orientation="vertical">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category"
                            android:id="@+id/tvShowCatgoryModreator"
                            android:textColor="#ffffff"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvGetCategoryModreator"
                            android:layout_column="1"
                            android:hint="example : &quot;stuyding&quot;"
                            android:textColorHint="#ffffff"
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Title"
                            android:id="@+id/tvShowTitleModreator"
                            android:textColor="#ffffff"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvGetTitleModreator"
                            android:textColor="#ffffff"
                            android:hint="example : &quot;study&quot;"
                            android:textColorHint="#ffffff"
                            android:textSize="18dp"
                            android:textAlignment="center" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="decription"
                            android:id="@+id/tvShowDecsriptionModerator"
                            android:textColor="#ffffff"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvGetDescriptionModreator"
                            android:textColorHint="#ffffff"
                            android:hint="example : &quot;study&quot;"
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location"
                            android:id="@+id/tvShowLocationModreator"
                            android:textColor="#ffffff"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvGetLocationModreator"
                            android:textColorHint="#ffffff"
                            android:hint="example &quot;haifa&quot;"
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            android:textAlignment="center" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ACK status"
                            android:id="@+id/tvShowAckSatusModreator"
                            android:textColor="#ffffff"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvGetAckStatusModreator"
                            android:hint="ON / OFF"
                            android:textColorHint="#ffffff"
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:id="@+id/tvShowDateModreator"
                            android:textColor="#ffffff"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvGetDateModreator"
                            android:textColorHint="#ffffff"
                            android:hint="example: &quot;28/05/2016&quot;"
                            android:textColor="#ffffff"
                            android:textSize="16dp"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:id="@+id/tvShowTimeModreator"
                            android:textColor="#ffffff"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvGetTimeModreator"
                            android:hint="example: &quot;14:22&quot;"
                            android:textColorHint="#ffffff"
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            android:textAlignment="center" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Maximum participants"
                            android:id="@+id/tvShowMaxParticipantsModreator"
                            android:textColor="#ffffff"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvGetMaxParticipantsModreator"
                            android:textColorHint="#ffffff"
                            android:hint="example : 5"
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            android:textAlignment="center" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/particpantList"
                android:layout_column="10">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="353dp"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_below="@+id/linearLayout"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/linearLayout4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Participant"
                    android:id="@+id/textView"
                    android:textSize="30dp"
                    android:textColor="#ffffff" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="152dp"
                    android:background="@android:color/darker_gray"
                    android:layout_height="1dp"></LinearLayout>

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/linearLayout6"
                android:layout_column="10" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="132dp"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_below="@+id/linearLayout"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/linearLayout5" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableLayout"
                    android:orientation="vertical" >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category"
                            android:id="@+id/textView3"
                            android:textColor="#ffffff"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView4"
                            android:layout_column="1"
                            android:hint="example : &quot;stuyding&quot;"
                            android:textColorHint="#ffffff"
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Title"
                            android:id="@+id/textView5"
                            android:textColor="#ffffff"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView6"
                            android:textColor="#ffffff"
                            android:hint="example : &quot;study&quot;"
                            android:textColorHint="#ffffff"
                            android:textSize="18dp"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="decription"
                            android:id="@+id/textView7"
                            android:textColor="#ffffff"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView8"
                            android:textColorHint="#ffffff"
                            android:hint="example : &quot;study&quot;"
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location"
                            android:id="@+id/textView9"
                            android:textColor="#ffffff"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView10"
                            android:textColorHint="#ffffff"
                            android:hint="example &quot;haifa&quot;"
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ACK status"
                            android:id="@+id/textView11"
                            android:textColor="#ffffff"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView12"
                            android:hint="ON / OFF"
                            android:textColorHint="#ffffff"
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:id="@+id/textView13"
                            android:textColor="#ffffff"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView14"
                            android:textColorHint="#ffffff"
                            android:hint="example: &quot;28/05/2016&quot;"
                            android:textColor="#ffffff"
                            android:textSize="16dp"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:id="@+id/textView15"
                            android:textColor="#ffffff"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView16"
                            android:hint="example: &quot;14:22&quot;"
                            android:textColorHint="#ffffff"
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Maximum participants"
                            android:id="@+id/textView17"
                            android:textColor="#ffffff"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView18"
                            android:textColorHint="#ffffff"
                            android:hint="example : 5"
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            android:textAlignment="center" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </TableRow>

    </TableLayout>

</RelativeLayout>
