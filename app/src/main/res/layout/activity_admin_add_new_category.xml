<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ofir.testfunctionality2.Admin.AdminAddNewCategoryActivity"
    android:background="#306a9f">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category    "
        android:id="@+id/textView39"
        android:textColor="#ffffff"
        android:textSize="30dp" />

    <Spinner
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner3"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new category"
        android:id="@+id/textView37"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_below="@+id/spinner3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/linearLayout45"
        android:layout_above="@+id/textView37"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:hint="New category"
        android:layout_below="@+id/textView37"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/button4"
        android:layout_below="@+id/editText"
        android:layout_marginTop="96dp"
        android:layout_alignParentStart="true" />

</RelativeLayout>
