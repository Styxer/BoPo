<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Notifications.NotificationsActivity"
    android:background="#306a9f">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Notification"
        android:id="@+id/bShowNotifications"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="showNotification" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Notifications"
        android:id="@+id/bStopNotifications"
        android:layout_below="@+id/bShowNotifications"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="stopNotification" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alert In 5 seconds"
        android:id="@+id/bAlertIn5Seconds"
        android:layout_below="@+id/bStopNotifications"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="setAlarm" />

</RelativeLayout>
